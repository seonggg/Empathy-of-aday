<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MixResult"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/bead_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/angry" />

    <TextView
        android:id="@+id/comment_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="멘트가 들어갈 자리"
        android:fontFamily="@font/applesdgothicneo"
        android:layout_marginVertical="100dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:background="#e9f0ff"
            android:fontFamily="@font/applesdgothicneo"
            android:text="구슬 공유"
            android:textColor="#365191"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/room_btn"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/room_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_weight="1"
            android:background="#e9f0ff"
            android:fontFamily="@font/applesdgothicneo"
            android:text="방으로 가기"
            android:textColor="#365191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/share_btn"
            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>