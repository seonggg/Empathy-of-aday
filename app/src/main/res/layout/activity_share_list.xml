<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/back_img"
    tools:context=".ShareList">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ToolbarTheme" >

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="50dp"
            android:text="오늘\n나와 같은 구슬을\n공유한 분들입니다."
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:fontFamily="@font/applesdgothicneo"
            android:textColor="#6A8CE0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:fontFamily="@font/applesdgothicneo"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/diary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="일기"
                android:fontFamily="@font/applesdgothicneo"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"/>

        </LinearLayout>

        <View
            android:id="@+id/main_divider"
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/name_view1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="딸기"
                android:fontFamily="@font/applesdgothicneo"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/read_btn1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/black" />

        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/name_view2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="수박바"
                android:fontFamily="@font/applesdgothicneo"
                android:textAlignment="center"
                android:layout_weight="1"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/read_btn2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/black" />

        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_view3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="하이"
                android:fontFamily="@font/applesdgothicneo"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/read_btn3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/name_view4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ksy"
                android:fontFamily="@font/applesdgothicneo"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/read_btn4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="5dp">

            <TextView
                android:id="@+id/name_view5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="그라미"
                android:fontFamily="@font/applesdgothicneo"
                android:textAlignment="center"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/read_btn5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_book_24"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"/>

        <Button
            android:id="@+id/home_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="방으로 돌아가기"
            android:fontFamily="@font/applesdgothicneo"
            android:background="@drawable/btn_style2"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


    </LinearLayout>
</LinearLayout>